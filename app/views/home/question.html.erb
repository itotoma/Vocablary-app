<% content_for :cover do %>
    <header>
        <nav class="navbar navbar-default", style="background-color:skyblue; height:70px;">
        	<div class="container-fluid">
        		<div class="navbar-header">
        			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
        				<span class="sr-only">Toggle navigation</span>
        				<span class="icon-bar"></span>
        				<span class="icon-bar"></span>
        				<span class="icon-bar"></span>
        			</button>
        			<h1 style="color:white; margin:0px 10px; padding:10px; font-size:20px;">
        			    <%= @story.title %>
        			    <br>
        			    <% if @status == "unclear"%>
        			         第<%= @story.number %>話: 未回答のみ
        			    <% elsif @status == "correct" %>
        			         第<%= @story.number %>話: <i class="far fa-circle"></i>のみ
        			    <% elsif @status == "incorrect"%>
        			         第<%= @story.number %>話: <i class="fas fa-times"></i>のみ
        			    <% elsif @status == "like" %>
        			         第<%= @story.number %>話: <i class="fas fa-star"></i>のみ
        			    <% elsif @status == "all" %>
        			         第<%= @story.number %>話: 全て
        			     <% end %>
        			</h1>
        		</div>
        		<div class="collapse navbar-collapse" id="navbarEexample" style="text-align:right; background-color:skyblue;">
        			<ul class="nav navbar-nav">
        				<li><%= link_to 'ログアウト',destroy_user_session_path, method: :delete %></li>
        				<li><%= link_to 'ホームに戻る', home_index_path %></li>
        				<li><%= @current_user.email %></li>
        			</ul>
        		</div>
        	</div>
        </nav>
    </header>
<% end %>

<% if @question.present? %>

    <h1 id="question", style="text-align:center;"><%= @question.question %></h1>
    
    <h1 id="answer", style="text-align:center; margin-top:60px;"></h1>
    
    <footer id="footer">
       <%# <%= render 'layouts/answer_footer' %>
       <%= render 'layouts/question_footer', this_question_id: @question.id %>
       
    </footer>
    
<% else %>

    <h1 style="text-align:center;">問題はありません</h1>
    
<% end %>
    