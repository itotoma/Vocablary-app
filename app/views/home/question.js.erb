<%# if transition from question to answer %>
if(<%= @aim %> == 0){
    $('#footer').html("<%= escape_javascript(render 'layouts/question_footer', this_question_id: @question.id) %>");
    $('#answer').html("");
    $('#question').html("<%= @question.question %>");
    $('#audio').html("<%= escape_javascript(render 'layouts/audio', sound_file: @question.sound_file , num: @question.id) %>");
    $('#favorite').html("<%= escape_javascript(render 'layouts/favorite_star', question: @question) %>");
}

if(<%= @aim %> == 1){
    $('#footer').html("<%= escape_javascript(render 'layouts/answer_footer', question_id: @question.id) %>");
    $('#answer').html("<%= @question.answer %>");
    $('#favorite').html("<%= escape_javascript(render 'layouts/favorite_star', question: @question) %>");
}

if(<%= @aim %> == 2 ){
    $('#footer').html("");
    $('#answer').html("");
    $('#question').html("問題は以上です!");
    $('#favorite').html("");
}

if(<%= @aim %> == 3 ){
   $('#favorite').html("<%= escape_javascript(render 'layouts/favorite_star', question: @question) %>");
}

